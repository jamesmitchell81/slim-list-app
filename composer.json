{
	"name": "jm/slim-list-app",
	"description": "Simple list app to get to know slimframework",
	"authors": [
		{
			"name": "James Mitchell",
			"email": "james@taylormitchell.co.uk",
			"homepage": "https://james.taylormitchell.co.uk"
		}
	],
	"require": {
		"php": ">=5.5.0",
		"slim/slim": "^3.1",
		"monolog/monolog": "^1.17",
		"slim/php-view": "^2.0",
		"symfony/yaml": "^3.2",
		"vlucas/phpdotenv": "^2.4",
		"fzaninotto/faker": "^1.6"
	},
	"require-dev": {
		"phpunit/phpunit": "^6.0"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app/src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
    "config": {
        "process-timeout" : 0
    },
	"scripts": {
		"start": "php -S 0.0.0.0:8080 -t public public/index.php",
		"test": "phpunit"
	}
}
